<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <header class="header-section" style="padding-bottom: 0px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="site-logo">
                            <h2 class="animate__animated animate__fadeInDown"><a href="#">
                                    <%= title %>
                                </a></h2>
                            <p>Following Contacts are of Business</p>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <section id="services" class="services section-bg" style="padding-top: 0px;">
            <div class="container" data-aos="fade-up">
                <div class="container register">
                    <div class="row">
                        <div class="col-md-3 register-left">
                            <img src="https://img.icons8.com/pastel-glyph/64/000000/edit--v2.png" />
                            <h3>Edit Contact</h3>
                            <p>You want to edit? Please Edit</p>


                        </div>
                        <div class="col-md-9 register-right">

                            <div class="tab-content" id="myTabContent">
                                <!-- Message Area -->

                                <div class="tab-pane fade show active" id="home" role="tabpanel"
                                    aria-labelledby="home-tab">
                                    <h3 class="register-heading">Edit Contact</h3>
                                    <form method="POST" autocomplete="off">
                                        <div class="row register-form">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="nameTextField">Contact Name</label>
                                                    <input type="text" class="form-control" id="nameTextField"
                                                        placeholder="Enter the Contact Name" name="name"
                                                        value="<%= business_contact.name %>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="numberTextField">Contact Number</label>
                                                    <input type="text" class="form-control" id="numberTextField"
                                                        placeholder="Enter the Contact Number" name="phone"
                                                        value="<%= business_contact.phone %>" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="emailTextField">Email</label>
                                                    <input type="text" class="form-control" id="emailTextField"
                                                        placeholder="Enter Email" name="email"
                                                        value="<%= business_contact.email %>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="descriptionTextArea">Description</label>
                                                    <textarea type="text" class="form-control" id="descriptionTextArea"placeholder="Enter the a brief description of the Business"
                                                        name="description" rows="2" required><%= business_contact.description %></textarea>
                                                </div>

                                            </div>
                                            <div class="col-md-6"><input type="submit" class="btnRegister hvr-buzz-out" value="Submit" /></div>
                                            <div class="col-md-6"><a href="/business-contact"><input type="cancel" class="btnRegister hvr-buzz-out" value="Cancel" /></a></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>